# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# Groq API Configuration
# Get your free API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Rayyan Credentials (Optional - for automatic login)
# Alternatively, you can manually log in when prompted
RAYYAN_EMAIL=your_email@example.com
RAYYAN_PASSWORD=your_password_here

# Hugging Face Token (Optional - for some models)
# Get free token from: https://huggingface.co/settings/tokens
# Only needed if using certain Hugging Face models
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Ollama Configuration (Optional - for local models)
# Default: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# Screening Configuration (Optional)
MAX_ARTICLES=1000
CONFIDENCE_THRESHOLD=0.7
